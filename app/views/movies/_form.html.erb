<%= simple_form_for @movie do |f| %>
    <%= f.input :title, :autofocus => true %>
    <%= f.input :description %>
    <%= f.input :rating %>
    <%= f.input :released_on %>
    <%= f.input :total_gross %>
    <%= f.input :cast %>
    <%= f.input :director %>
    <%= f.input :duration %>
    <%= f.input :image_file_name %>

    <%= f.button :submit %> |
    <%= link_to 'Cancel', movies_path %>
<% end %>