<%= simple_form_for @movie do |f| %>
    <%= f.input :title, :label => 'Title', :autofocus => true %>
    <%= f.input :description, :label => 'Description' %>
    <%= f.input :rating, :label => 'Rating' %>
    <%= f.input :released_on, :label => 'Released on' %>
    <%= f.input :total_gross, :label => 'Total Gross' %>
    <%= f.input :cast, :label => 'Cast' %>
    <%= f.input :director, :label => 'Director' %>
    <%= f.input :duration, :label => 'Duration' %>
    <%= f.input :image_file_name, :label => 'Image File Name' %>

    <%= f.submit %> |
    <%= link_to 'Cancel', movies_path %>
<% end %>