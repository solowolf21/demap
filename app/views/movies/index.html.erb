<h1><%= pluralize(@movies.size, 'Movie') %></h1>

<%= link_to 'Create a New Moive', new_movie_path %>

<% @movies.each do |movie| %>
  <article>
    <header>
      <%= image_for movie %><br />
      <%= link_to movie.title, movie %>
      <h3><%= movie.cast %></h3>
    </header>
    <p><%= truncate(movie.description, :length => 40, :seprator => ' ') %></p>
    <table>
      <tr>
        <th>Realsed:</th>
        <td><%= movie.released_on.to_s + ' (' + time_ago_in_words(movie.released_on) +')' %></td>
      </tr>
      <tr>
        <th>Rating:</th>
        <td><%= movie.rating %></td>
      </tr>
      <tr>
        <th>Total Gross:</th>
        <td><%= format_total_gross(movie) %></td>
      </tr>
      <tr>
        <th>Duration:</th>
        <td><%= movie.duration %></td>
      </tr>
      <tr>
        <th>Cast:</th>
        <td><%= movie.cast %></td>
      </tr>
    </table>
  </article>
<% end %>