<h1><%= pluralize(@movies.size, 'Movie') %></h1>
<% @movies.each do |movie| %>
  <article>
    <header><%= link_to movie.title, movie %></header>
    <p><%= truncate(movie.description, :length => 40, :seprator => ' ') %></p>
    <table>
      <tr>
        <th>Realsed:</th>
        <td><%= movie.released_on.to_s + ' (' + time_ago_in_words(movie.released_on) +')' %></td>
      </tr>
      <tr>
        <th>Rating:</th>
        <td><%= movie.rating %></td>
      </tr>
      <tr>
        <th>Total Gross:</th>
        <td><%= format_total_gross(movie) %></td>
      </tr>
    </table>
  </article>
<% end %>